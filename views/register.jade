extend layout

block content
	h2.page-header Register
	p Pleaes register using the form below

	ul.errors
		if errors
			each error, i in errors
				li.alert.alert-danger #{error.msg}
	form(method='post', action='/users/register', enctype='multipart/form-data')
		.form-group
			label Name
			input.form-control(name='name', type='text', place-holder='Enter name')
		.form-group
			label Email
			input.form-control(name='email', type='email', place-holder='Enter Email')
		.form-group
			label Username
			input.form-control(name='username', type='text', place-holder='Enter Username')
		.form-group
			label Password
			input.form-control(name='password', type='password', place-holder='Enter Password')
		.form-group
			label Confirm Password
			input.form-control(name='conPassword', type='password', place-holder='Confirm Password')
		.form-group
			label Profile Image
			input.form-control(name='profileImage', type='file')
		input.btn.btn-primary(type='submit', name='submit', value='register')